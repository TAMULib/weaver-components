{
  "name": "weaver-components",
  "version": "0.0.1",
  "scripts": {
    "build": "ng build --prod --output-hashing none",
    "build:clean": "npm run clean && npm run build",
    "build:wvr-elements": "ng build wvr-elements",
    "build:wvr-components": "node scripts/build-wvr-components.js",
    "clean": "rm -rf dist",
    "lint": "ng lint",
    "ng": "ng",
    "prebuild": "npm run build:wvr-elements",
    "postbuild": "npm run build:wvr-components",
    "start": "ng serve --port 4200",
    "start:static": "static-server -p 9080",
    "start:docker": "docker run  -p 80:80 --name weaver-components-1  weaver-components",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "ng e2e",
    "test:unit": "npm run test:watch -- --watch=false",
    "test:watch": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.14",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/elements": "^8.2.14",
    "@angular/forms": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "@ng-bootstrap/ng-bootstrap": "^5.2.1",
    "bootstrap": "^4.4.1",
    "classlist.js": "^1.1.20150312",
    "document-register-element": "^1.14.3",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "web-animations-js": "^2.3.2",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.24",
    "@angular-devkit/build-ng-packagr": "~0.803.24",
    "@angular/cli": "^8.3.24",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@types/jasmine": "~3.5.2",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^13.7.0",
    "codelyzer": "^5.2.1",
    "concat": "^1.0.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.0",
    "karma-jasmine-html-reporter": "^1.5.1",
    "ng-packagr": "^5.7.1",
    "protractor": "~5.4.3",
    "ts-node": "~8.6.2",
    "tslint": "~6.0.0",
    "typescript": "~3.5.1"
  }
}
